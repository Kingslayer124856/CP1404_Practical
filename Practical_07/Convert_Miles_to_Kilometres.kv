BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34 '
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
            Button:
                text: 'Down'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Convert m to km'
            on_press: app.calculate_conversion(input_miles.text)
        Label:
            id: output_label
            font_size: 48
            color: (1, 1, 0, 1)